@model IEnumerable<CarPool.Models.Ride>

@{
    ViewBag.Title = "ActiveRides";
    Layout = "~/Views/Shared/_InLayout.cshtml";
}

<h2>ActiveRides</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("ActiveRides", "Rides", FormMethod.Post))
{
    @Html.TextBox("search")
    <input type="submit" name="submit" value="search"  />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RideCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RideDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedCount)
        </th>
       
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr> <td colspan="3"> Records not found </td></tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.RideCode,"RideDetails","Rides",new { id = item.RideCode}, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RideDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookedCount)
                </td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RideCode }) |
                   
                    @Html.ActionLink("Delete", "Delete", new { id = item.RideCode })
                </td>
            </tr>
        }
    }

    </table>
